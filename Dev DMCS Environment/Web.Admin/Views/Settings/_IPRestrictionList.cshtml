@model IPRestrictionListModel
@using Web.Admin.Logic.Collections
@using Web.Admin.Logic.Objects
@using Web.Admin.Logic.Utilities
@using Web.Admin.Helpers
@using Web.Admin.Models

<table id="@Model.HolderName"  width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
	
    <thead>
        <tr>
            <th style="width:3%;text-align:center"><input type="checkbox" class="restriction-select-all-chb"/></th>
            <th class="restriction-sort-column">Status</th>
			<th class="restriction-sort-column">IP From</th>
            <th class="restriction-sort-column">IP To</th>
            <th class="restriction-sort-column">Typ</th>
            <th class="restriction-sort-column">Created</th>
            <th class="restriction-sort-column">Modified</th>
        </tr>
    </thead>

    <tbody>
        @foreach (IPRestriction restriction in Model.IPRestrictions)
        {
          <tr>
              <td style="text-align:center" class="table-first-column"><input  id="member-select-@restriction.IPId" class="restriction-select" data-member-id="@restriction.IPId" type="checkbox" /></td>
              <td>@restriction.Enabled</td>
              <td>@restriction.IPFrom</td>
              <td>@restriction.IPTo</td>
              <td>@restriction.IPType</td>
              <td style="white-space:nowrap">@if (@restriction.Created != DateTime.MinValue){@restriction.Created.ToLocalTime().ToString("dd MMM yyyy HH:mm:ss")}</td>
              <td style="white-space:nowrap">@if(restriction.Modified != DateTime.MinValue){@restriction.Modified.ToLocalTime().ToString("dd MMM yyyy HH:mm:ss")}</td>
          </tr>
        }  
        </tbody>
</table>